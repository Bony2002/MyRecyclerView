<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/routinesFragment">

    <fragment
        android:id="@+id/routinesFragment"
        android:name="com.example.myrecyclerview.fragments.RoutinesFragment"
        android:label="fragment_routines"
        tools:layout="@layout/fragment_routines" >
        <action
            android:id="@+id/action_routinesFragment_to_specificRoutine_Fragment"
            app:destination="@id/specificRoutine_Fragment" />
    </fragment>
    <fragment
        android:id="@+id/specificRoutine_Fragment"
        android:name="com.example.myrecyclerview.fragments.SpecificRoutine_Fragment"
        android:label="fragment_specific_routine_"
        tools:layout="@layout/fragment_specific_routine_" />
</navigation>